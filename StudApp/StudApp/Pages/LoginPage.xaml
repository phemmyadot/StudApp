<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudApp.Pages.LoginPage" Title="LoginPage" NavigationPage.HasNavigationBar="False"  BackgroundColor="{StaticResource PageBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="CenterAndExpand">
            <Button Text="Login"  Style="{StaticResource PrimaryButtonStyle}"
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding Login_User}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>